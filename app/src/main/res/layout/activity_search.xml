<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/search_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search ACTIVITY"/>

    <TextView
        android:id="@+id/work_list"
        android:layout_below="@+id/search_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="
        1, Views pictures of other post
        2, Search bar (type down name of what the user looking)
        3, Send a contact info to the owner
"
        />


    <EditText
        android:id="@+id/search_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:layout_below="@+id/work_list"
        android:background="#90CAF9"
        />











</RelativeLayout>